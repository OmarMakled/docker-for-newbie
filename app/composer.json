{
    "require": {
        "php": "^8.1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "autofix": [
            "./vendor/bin/phpcbf --standard=PSR12 src/",
            "./vendor/bin/phpcbf --standard=PSR12 tests/"
        ]
    }
}
